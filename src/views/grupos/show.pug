extends ../layout

block content
    h1=grupo.id_grupo +'-' + grupo.nombre
    h2 Participantes
        ul 
            each participante in datos[0].participantes
                li
                    a(href=`/users/${participante.id_usuario}`)= participante.participante.nombre

    h2 Eventos
        ul 
            each evento in datos[0].eventos
                li
                    a(href=`/eventos/${evento.id_evento}`)= evento.nombre +', '+ evento.fecha 
    
    a(href="/grupos/create") Crear nuevo grupo
    div
        a(href="/grupos/myGroups/eventos/new") Crear nuevo evento

    h2 Ranking 
        ul 
            each rank in ranking
                li=rank.nombre + ' con ' + rank.liadas + ' liadas'